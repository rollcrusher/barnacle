  "scripts": {
    "test:unit": "karma start karma.conf.js",
    "test:api:allure": "node_modules/mocha/bin/_mocha --reporter mocha-allure-reporter test/api/spec",
    "test:api:list": "node_modules/mocha/bin/_mocha --reporter list test/api/spec",
    "test:report": "node_modules/allure-commandline/bin/allure generate allure-results --clean -o reports/allure-report",
    "reports:clean": "rm -rf reports",
    "code:eslint": "eslint src/** test/** --quiet",
    "code:analyse": "plato -r -d reports/test-analyse -e .eslintrc.json -t \"barnacle\" -x .json src/**/*.js test/**/*.js",
    "code:coverage": "node_modules/.bin/istanbul --config istanbul.config.json",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js"
  }
